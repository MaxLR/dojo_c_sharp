@* Specify what kind of data is being passed into this view via the View Model *@
@model VideosView

<h1>@Model.Title</h1>

<a href="/">Home</a>

@foreach (string videoId in Model.YoutubeVideoIds) {
    <iframe
    width="560"
    height="400"
    src="https://www.youtube.com/embed/@videoId"
    title="YouTube video player"
    frameborder="0"
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
    allowfullscreen
    ></iframe>
}